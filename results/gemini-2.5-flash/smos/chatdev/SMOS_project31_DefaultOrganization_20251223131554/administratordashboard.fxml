<!--
DOCSTRING: FXML layout for the Administrator Dashboard.
This defines the main GUI structure for managing student absences.
-->
<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdministratorDashboardController">
   <top>
      <VBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Administrator Absence Management">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Select Date:">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <DatePicker fx:id="datePicker" onAction="#onDateSelected" />
                  <HBox HBox.hgrow="ALWAYS" />
                  <Label fx:id="unsavedChangesLabel" style="-fx-text-fill: orange; -fx-font-weight: bold;" text=" (Unsaved Changes)" visible="false" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="absencesTable" prefHeight="400.0" prefWidth="760.0">
              <columns>
                <TableColumn fx:id="studentIdColumn" prefWidth="75.0" text="Student ID" />
                <TableColumn fx:id="studentNameColumn" prefWidth="150.0" text="Student Name" />
                  <TableColumn fx:id="absenceDateColumn" prefWidth="100.0" text="Absence Date" />
                  <TableColumn fx:id="reasonColumn" prefWidth="300.0" text="Reason" />
                  <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
              </columns>
            </TableView>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Button onAction="#handleAddAbsence" text="Add Absence" />
                  <Button onAction="#handleDeleteAbsence" text="Delete Selected" />
                  <HBox HBox.hgrow="ALWAYS" />
                  <Button fx:id="saveButton" onAction="#handleSave" text="Save Changes" />
                  <Button onAction="#handleCancel" text="Cancel" />
               </children>
            </HBox>
            <Label fx:id="statusLabel" wrapText="true" />
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>